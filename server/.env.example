# Environment
NODE_ENV=development

# Server
PORT=3000
CLIENT_URL=http://localhost:5173

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/edubridge?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Email Service (to be configured)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@edubridge.com

# File Storage (to be configured)
STORAGE_TYPE=local
STORAGE_PATH=./uploads
MAX_FILE_SIZE=104857600

# Video Conferencing API (to be configured)
VIDEO_API_PROVIDER=agora
VIDEO_API_KEY=your-agora-api-key
VIDEO_API_SECRET=your-agora-api-secret

# Payment Gateway (to be configured)
PAYMENT_GATEWAY=stripe
PAYMENT_API_KEY=your-payment-api-key
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# Platform Settings
PLATFORM_FEE_PERCENTAGE=20
MIN_PASSWORD_LENGTH=8
SESSION_TIMEOUT_MINUTES=30
MAX_LOGIN_ATTEMPTS=5
